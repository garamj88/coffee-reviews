<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/coffees/new.css" />
<%- include('../partials/nav') %>

<section class="container">
  <h1><%= title %></h1><br>
  
 <form class="row g-3" id="new-form" action="/coffees" method="POST">
    <h4 style="color: rgb(255, 0, 0);">*All fields are required</h4><br>

    <div class="col-md-6">
    <label for="name-input" class="form-label">Name*</label>
    <input type="text" class="form-control" name="name" id="name-input" required="true" placeholder="required">
  </div>

    <label for="producer-input">Producer*</label>
    <input type="text" name="producer" id="producer-input" required="true" placeholder="required"><br><br>

    <label for="region-input">Region*</label>
    <input type="text" name="region" id="region-input" required="true" placeholder="required">

    <label for="country-input">Country*</label>
    <input type="text" name="country" id="country-input" required="true" placeholder="required">
    <br><br>

    <div class="taste-notes-from-roasters">Taste Notes from Roasters<br>
    <label for="taste1-input">Taste 1*</label>
    <input type="text" name="tasteNote.taste1" id="taste1-input" required="true" placeholder="required">
    <label for="taste2-input">Taste 2*</label>
    <input type="text" name="tasteNote.taste2" id="taste2-input" required="true" placeholder="required">
    <label for="taste3-input">Taste 3*</label>
    <input type="text" name="tasteNote.taste3" id="taste3-input" required="true" placeholder="required">
  </div><br>

  <label for="varietal-input">Varietal*</label>
  <input type="text" name="varietal" id="varietal-input " required="true" placeholder="required">

    <label for="harvest-input">Harvest*</label>
    <input
      type="text"
      name="harvest"
      id="harvest-input"
      required="true"
      placeholder="example: Jan 2021"
    />

    <label for="process-select">Process*</label>
    <select name="process" id="process-select" required="true">
      <option value="Washed">Washed</option>
      <option value="Natural">Natural</option>
    </select><br><br>

    <label for="roasters-input">Roasters*</label>
    <input type="text" name="roasters" id="roasters-input" placeholder="required">

    <label for="roast-date-input">Roast Date*</label>
    <input
      type="date"
      name="roastDate"
      id="roast-date-input"
      required="true" 
      placeholder="required"
    /></h3><br><br>

    <button class="btn btn-outline-secondary" type="submit"><h3>Submit</h3></button>
  </form>
</section>

